<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- GitHub dark theme colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="TextBrush" Color="#E6EDF3"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#8B949E"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#238636"/>

    <!-- Contribution level colors (GitHub exact palette) -->
    <Color x:Key="ContribNone">#161B22</Color>
    <Color x:Key="ContribLevel1">#0E4429</Color>
    <Color x:Key="ContribLevel2">#006D32</Color>
    <Color x:Key="ContribLevel3">#26A641</Color>
    <Color x:Key="ContribLevel4">#39D353</Color>

    <!-- Drop shadow for popup -->
    <DropShadowEffect x:Key="PopupShadow" BlurRadius="20" ShadowDepth="4" Opacity="0.6" Color="Black"/>

    <!-- Tooltip style matching GitHub dark -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="#1B1F23"/>
        <Setter Property="Foreground" Value="#E6EDF3"/>
        <Setter Property="BorderBrush" Value="#30363D"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- Refresh button style -->
    <Style x:Key="RefreshButton" TargetType="Button">
        <Setter Property="Background" Value="#21262D"/>
        <Setter Property="Foreground" Value="#C9D1D9"/>
        <Setter Property="BorderBrush" Value="#30363D"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,4"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#30363D"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#3B434B"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
